extends layout

block content
    .w3-card-4 
        header.w3-container.w3-light-blue 
            a(href='/' class="w3-button w3-light-grey w3-round w3-margin-top w3-margin-bottom " style="width:100px") Voltar          
            .w3-margin-left
            h1 Página de #{pais}

        h2 Lista de Participações
        table.w3-table-all
            thead
                tr
                    th ID da edição
                    th Ano
                    th Nome da música
                    th Nome do intérprete 
                    th Venceu
            tbody
                    each participacao in participacoes
                        tr
                            td 
                                a(href=`/${participacao.edicaoId}`) #{participacao.edicaoId}
                            td #{participacao.ano}
                            td #{participacao.titulo}
                            td #{participacao.interprete} 
                            td #{participacao.venceu ? 'Sim' : 'Não'}
        br 
        h2 Lista de Organizações
        table.w3-table-all
            thead
                tr
                    th ID da edição
                    th Ano
            tbody
                    each org in organizacoes
                        tr
                            td 
                                a(href=`/${org.idEdicao}`) #{org.idEdicao}
                            td #{org.ano}
//- edicaoList.pug
extends layout

block content
  .w3-card-4 
    header.w3-container.w3-light-blue
      h1 Lista de Edições
      h3 Todas as edições oficiais da Eurovisão

  table.w3-table-all
    thead
      tr
        th ID da Edição
        th Ano da Edição
        th País Organizador
        th País Vencedor
    tbody
      each edicao in lista
        tr
          td
            a(href=`/${edicao._id}`) #{edicao._id}
          td #{edicao.anoEdicao}
          td
            a(href=`/paises/${edicao.organizacao}`) #{edicao.organizacao}
          td
            a(href=`/paises/${edicao.vencedor}`) #{edicao.vencedor}
